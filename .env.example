# ============================================================
# Configuration Yeastar Presence Manager
# ============================================================

# ============================================================
# API Yeastar PBX
# ============================================================
# Exemples: https://YOUR_IP:8088 ou https://pbx.example.com:8088
YEASTAR_PBX_URL=https://YOUR_IP:8088

# Credentials API (récupérables dans Yeastar: Settings > Integrations > API)
YEASTAR_CLIENT_ID=enter_your_client_secret_here
YEASTAR_CLIENT_SECRET=enter_your_client_secret_here

# ============================================================
# Base de données
# ============================================================

DB_TYPE=mysql # or postgresql
DB_HOST=YOUR_IP
DB_PORT=3306
DB_NAME=yeastar
DB_USER=yeastar_user
DB_PASSWORD=your_password_here

# ============================================================
# Configuration iCal
# ============================================================
ICAL_BASE_URL=https://YOUR_IP


# ============================================================
# Configuration Application
# ============================================================
# Clé secrète Flask (générer avec: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=changez-cette-cle-secrete-en-production

# Environnement (development ou production)
FLASK_ENV=production
FLASK_DEBUG=0

# ============================================================
# Scheduler
# ============================================================
# En minutes
SYNC_INTERVAL_MINUTES=5

# ============================================================
# Statut par défaut
# ============================================================
# Statut à appliquer hors des créneaux planifiés
# Valeurs possibles: available, away, do_not_disturb, business_trip, off_work, face_a_face_pedagogique
DEFAULT_STATUS=available

# ============================================================
# Logs
# ============================================================
# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
